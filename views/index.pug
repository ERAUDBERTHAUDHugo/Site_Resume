extends layout

mixin elem-timeline-experience(date,job,company,description,skills)
    div(class="container left")
        div(class="content")
            div(class='color-bar-timeline')
                p(class="timeline-date")=date 
            h2(class='text-timeline')=job 
            h4(class='text-timeline sub-title')=company
            p(class='text-timeline experience')#desc-exp=description
            div(class="container-skills-exp text-timeline", style="font-weight:bold;") SKILLS USED : 
                div(class='text-timeline experience-hover' )
                    each skill in skills
                        div(class="skills-experience")=skill

mixin elem-timeline-education(date,job,company,description)
    div(class="container left")
        div(class="content")
            div(class='color-bar-timeline')
                p(class="timeline-date")=date 
            h2(class='text-timeline')=job 
            h4(class='text-timeline sub-title')=company
            p(class='text-timeline ')=description

mixin elem-skills(name,percent_string,style_prop)
    div(class="skill-content")
        div(class="skill-text-container")
            p(class="skill-name")=name
            p(class="skill-percent-text")=percent_string
        div(class="skill-bar")
            div(class="skill-percent", style=style_prop)
            
